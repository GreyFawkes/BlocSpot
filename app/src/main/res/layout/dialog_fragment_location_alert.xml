<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_alert_dialog_description_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9">

            <TextView
                android:id="@+id/tv_alert_dialog_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"/>

            <TextView
                android:id="@+id/tv_alert_dialog_location_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blah, Blah, Blah, Blah, Blah, Blah, Blah, Blah, Blah, Blah, Blah, Blah "/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_alert_dialog_has_visited"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>



    <Button
        android:id="@+id/btn_alert_dialog_location_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ll_alert_dialog_description_wrapper"
        android:text="Category"/>

    <Button
        android:id="@+id/btn_alert_dialog_navigateTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_alert_dialog_location_category"
        android:layout_toRightOf="@id/btn_alert_dialog_location_category"
        android:layout_toEndOf="@id/btn_alert_dialog_location_category"
        android:text="Navigate To..."/>

    <Button
        android:id="@+id/btn_alert_dialog_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_alert_dialog_location_category"
        android:layout_toRightOf="@id/btn_alert_dialog_navigateTo"
        android:layout_toEndOf="@id/btn_alert_dialog_navigateTo"
        android:text="Share"/>

    <Button
        android:id="@+id/btn_alert_dialog_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_alert_dialog_location_category"
        android:layout_toRightOf="@id/btn_alert_dialog_share"
        android:layout_toEndOf="@id/btn_alert_dialog_share"
        android:text="Delete"/>

</RelativeLayout>